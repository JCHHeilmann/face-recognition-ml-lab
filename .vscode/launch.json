  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Edge",
      "request": "launch",
      "type": "pwa-msedge",
      "url": "http://localhost:5000",
      "webRoot": "${workspaceFolder}/web-app/src"
    },

    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },

    {
      "name": "Python: Module Train Model",
      "type": "python",
      "request": "launch",
      "module": "training.train"
    },

    {
      "name": "Python: Module Train Classifier",
      "type": "python",
      "request": "launch",
      "module": "classifier.train"
    }
  ]
}
